<div>

    <h1>Enter your email to login</h1>

    <form action="/validation/loginform" method="post">
        <label for="email" id="email">Email Address:</label>
        <input type="email" id="" minlength="9" maxlength="200" autocomplete="email address" required autofocus />
        <button type="submit">Submit</button>
    </form>
    <hr />
    <a class="button google" href="/auth/federated/google">Sign in with Google</a>
</div>